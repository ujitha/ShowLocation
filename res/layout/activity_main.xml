<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/myLocBtn"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="left|center_vertical"
        android:text="Show My Location"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/sendLocBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myLocBtn"
        android:layout_alignRight="@+id/myLocBtn"
        android:layout_below="@+id/myLocBtn"
        android:layout_marginTop="25dp"
        android:text="Send my location" />

</RelativeLayout>